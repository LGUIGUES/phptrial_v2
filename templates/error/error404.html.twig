{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block main %}
<main class="error">
    <article class="mx-auto text-center p-3 bg-white bg-opacity-75 w-75 rounded-4">
        <h1>{% trans %}Page not found!{% endtrans %}</h1>
        <p>The requested page couldn't be located.</p>
        <div>
            <a class="btn btn-primary" href="{{ path('app_home') }}">{% trans %}Return to home{% endtrans %}</a>
        </div>
    </article>   
</main>     
{% endblock %}